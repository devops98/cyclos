<?xml version="1.0" encoding="UTF-8"?>

<beans default-autowire="byName"
       xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:jaxws="http://cxf.apache.org/jaxws"
       xsi:schemaLocation="
http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd
http://cxf.apache.org/jaxws http://cxf.apache.org/schemas/jaxws.xsd">

	<!-- Captcha producer -->
	<bean id="captchaProducer" class="nl.strohalm.cyclos.utils.CaptchaProducer" />

	<!-- Theme handler -->
	<bean id="themeHandler" class="nl.strohalm.cyclos.themes.ThemeHandlerImpl" />

	<!-- Link generator -->
	<bean id="linkGenerator" class="nl.strohalm.cyclos.utils.LinkGeneratorImpl" init-method="init"/>

	<!-- Message resolver -->
	<bean id="messageResolver" class="nl.strohalm.cyclos.utils.MessageResolverImpl"/>
	
	<!-- SMS sender -->
	<bean id="smsSender" class="nl.strohalm.cyclos.utils.sms.SmsSenderImpl" />
	
	<!-- Payment request handler -->
	<bean id="paymentRequestHandler" class="nl.strohalm.cyclos.utils.paymentrequest.PaymentRequestHandlerImpl" >
		<property name="maxThreads" value="#{cyclosProperties['cyclos.maxPaymentRequestSenderThreads']}" />
	</bean>

	<!-- Web services helpers -->
	<bean id="queryHelper" class="nl.strohalm.cyclos.webservices.utils.server.QueryHelper" />
	<bean id="adHelper" class="nl.strohalm.cyclos.webservices.utils.server.AdHelper" />
	<bean id="currencyHelper" class="nl.strohalm.cyclos.webservices.utils.server.CurrencyHelper" />
	<bean id="memberHelper" class="nl.strohalm.cyclos.webservices.utils.server.MemberHelper" />
	<bean id="groupHelper" class="nl.strohalm.cyclos.webservices.utils.server.GroupHelper" />
	<bean id="imageHelper" class="nl.strohalm.cyclos.webservices.utils.server.ImageHelper" />
	<bean id="fieldHelper" class="nl.strohalm.cyclos.webservices.utils.server.FieldHelper" />
	<bean id="ticketHelper" class="nl.strohalm.cyclos.webservices.utils.server.TicketHelper" />
	<bean id="accountHelper" class="nl.strohalm.cyclos.webservices.utils.server.AccountHelper" />
	<bean id="paymentHelper" class="nl.strohalm.cyclos.webservices.utils.server.PaymentHelper" />
	<bean id="channelHelper" class="nl.strohalm.cyclos.webservices.utils.server.ChannelHelper" />
	<bean id="infoTextHelper" class="nl.strohalm.cyclos.webservices.utils.server.InfoTextHelper" />
	<bean id="webServiceHelper" class="nl.strohalm.cyclos.webservices.utils.WebServiceHelper" />

	<!-- CXF configuration -->
	<import resource="classpath:META-INF/cxf/cxf.xml"/>
	<import resource="classpath:META-INF/cxf/cxf-extension-soap.xml"/>
	<import resource="classpath:META-INF/cxf/cxf-servlet.xml"/>

	<!-- SOAP interceptors -->    
	<bean id="authInterceptor" class="nl.strohalm.cyclos.webservices.AuthInterceptor" />
	<bean id="faultInterceptor" class="nl.strohalm.cyclos.webservices.CustomFaultInterceptor" />
	<bean id="posInterceptor" class="nl.strohalm.cyclos.webservices.PosInterceptor" />
	<bean id="cleanupInterceptor" class="nl.strohalm.cyclos.webservices.CleanupInterceptor" />
	
	<!-- Web services beans -->
	<bean id="memberWebServiceImpl" class="nl.strohalm.cyclos.webservices.members.MemberWebServiceImpl" />
	<jaxws:endpoint id="memberWebService" address="/members" implementor="#memberWebServiceImpl">
		<jaxws:inInterceptors>
			<ref bean="authInterceptor" />
		</jaxws:inInterceptors>
		<jaxws:outInterceptors>
			<ref bean="cleanupInterceptor" />
		</jaxws:outInterceptors>
		<jaxws:outFaultInterceptors>
			<ref bean="faultInterceptor" />
			<ref bean="cleanupInterceptor" />
		</jaxws:outFaultInterceptors>
	</jaxws:endpoint>
	    
	<bean id="adWebServiceImpl" class="nl.strohalm.cyclos.webservices.ads.AdWebServiceImpl" />
	<jaxws:endpoint id="adWebService" address="/ads" implementor="#adWebServiceImpl">
		<jaxws:inInterceptors>
			<ref bean="authInterceptor" />
		</jaxws:inInterceptors>
		<jaxws:outInterceptors>
			<ref bean="cleanupInterceptor" />
		</jaxws:outInterceptors>
		<jaxws:outFaultInterceptors>
			<ref bean="faultInterceptor" />
			<ref bean="cleanupInterceptor" />
		</jaxws:outFaultInterceptors>
	</jaxws:endpoint>
	    
	<bean id="fieldWebServiceImpl" class="nl.strohalm.cyclos.webservices.fields.FieldWebServiceImpl" />
	<jaxws:endpoint id="fieldWebService" address="/fields" implementor="#fieldWebServiceImpl">
		<jaxws:inInterceptors>
			<ref bean="authInterceptor" />
		</jaxws:inInterceptors>
		<jaxws:outInterceptors>
			<ref bean="cleanupInterceptor" />
		</jaxws:outInterceptors>
		<jaxws:outFaultInterceptors>
			<ref bean="faultInterceptor" />
			<ref bean="cleanupInterceptor" />
		</jaxws:outFaultInterceptors>
	</jaxws:endpoint>
	    
	<bean id="webshopWebServiceImpl" class="nl.strohalm.cyclos.webservices.webshop.WebShopWebServiceImpl" />
	<jaxws:endpoint id="webshopWebService" address="/webshop" implementor="#webshopWebServiceImpl">
		<jaxws:inInterceptors>
			<ref bean="authInterceptor" />
		</jaxws:inInterceptors>
		<jaxws:outInterceptors>
			<ref bean="cleanupInterceptor" />
		</jaxws:outInterceptors>
		<jaxws:outFaultInterceptors>
			<ref bean="faultInterceptor" />
			<ref bean="cleanupInterceptor" />
		</jaxws:outFaultInterceptors>
	</jaxws:endpoint>

	<bean id="accessWebServiceImpl" class="nl.strohalm.cyclos.webservices.access.AccessWebServiceImpl" />
	<jaxws:endpoint id="accessWebService" address="/access" implementor="#accessWebServiceImpl">
		<jaxws:inInterceptors>
			<ref bean="authInterceptor" />
		</jaxws:inInterceptors>
		<jaxws:outInterceptors>
			<ref bean="cleanupInterceptor" />
		</jaxws:outInterceptors>
		<jaxws:outFaultInterceptors>
			<ref bean="faultInterceptor" />
			<ref bean="cleanupInterceptor" />
		</jaxws:outFaultInterceptors>
	</jaxws:endpoint>

	<bean id="accountWebServiceImpl" class="nl.strohalm.cyclos.webservices.accounts.AccountWebServiceImpl" />
	<jaxws:endpoint id="accountWebService" address="/account" implementor="#accountWebServiceImpl">
		<jaxws:inInterceptors>
			<ref bean="authInterceptor" />
		</jaxws:inInterceptors>
		<jaxws:outInterceptors>
			<ref bean="cleanupInterceptor" />
		</jaxws:outInterceptors>
		<jaxws:outFaultInterceptors>
			<ref bean="faultInterceptor" />
			<ref bean="cleanupInterceptor" />
		</jaxws:outFaultInterceptors>
	</jaxws:endpoint>

	<bean id="paymentWebServiceImpl" class="nl.strohalm.cyclos.webservices.payments.PaymentWebServiceImpl" />
	<jaxws:endpoint id="paymentWebService" address="/payment" implementor="#paymentWebServiceImpl">
		<jaxws:inInterceptors>
			<ref bean="authInterceptor" />
		</jaxws:inInterceptors>
		<jaxws:outInterceptors>
			<ref bean="cleanupInterceptor" />
		</jaxws:outInterceptors>
		<jaxws:outFaultInterceptors>
			<ref bean="faultInterceptor" />
			<ref bean="cleanupInterceptor" />
		</jaxws:outFaultInterceptors>
	</jaxws:endpoint>

	<bean id="smsWebServiceImpl" class="nl.strohalm.cyclos.webservices.sms.SmsWebServiceImpl" />
	<jaxws:endpoint id="smsWebService" address="/sms" implementor="#smsWebServiceImpl">
		<jaxws:inInterceptors>
			<ref bean="authInterceptor" />
		</jaxws:inInterceptors>
		<jaxws:outInterceptors>
			<ref bean="cleanupInterceptor" />
		</jaxws:outInterceptors>
		<jaxws:outFaultInterceptors>
			<ref bean="faultInterceptor" />
			<ref bean="cleanupInterceptor" />
		</jaxws:outFaultInterceptors>
	</jaxws:endpoint>

	<bean id="infoTextWebServiceImpl" class="nl.strohalm.cyclos.webservices.infotexts.InfoTextWebServiceImpl" />
	<jaxws:endpoint id="infoTextWebService" address="/infoTexts" implementor="#infoTextWebServiceImpl">
		<jaxws:inInterceptors>
			<ref bean="authInterceptor" />
		</jaxws:inInterceptors>
		<jaxws:outInterceptors>
			<ref bean="cleanupInterceptor" />
		</jaxws:outInterceptors>
		<jaxws:outFaultInterceptors>
			<ref bean="faultInterceptor" />
			<ref bean="cleanupInterceptor" />			
		</jaxws:outFaultInterceptors>
	</jaxws:endpoint>

	<bean id="posWebServiceImpl" class="nl.strohalm.cyclos.webservices.pos.PosWebServiceImpl" />
	<jaxws:endpoint id="posWebService" address="/pos" implementor="#posWebServiceImpl">
		<jaxws:inInterceptors>
			<ref bean="posInterceptor" />
		</jaxws:inInterceptors>
		<jaxws:outInterceptors>
			<ref bean="cleanupInterceptor" />
		</jaxws:outInterceptors>
		<jaxws:outFaultInterceptors>
			<ref bean="faultInterceptor" />
			<ref bean="cleanupInterceptor" />			
		</jaxws:outFaultInterceptors>
	</jaxws:endpoint>

</beans>